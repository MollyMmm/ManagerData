          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

    <session-factory>
    <!-- hibernate的配置信息 分3坨 -->
	<!-- 1.数据源[链接数据库] -->
	<property name="hibernate.connection.driver_class">
		com.mysql.jdbc.Dr
	</property>
	<property name="hibernate.connection.url">
		jdbc:mysql://192.168.66.130:1521/orcl
	</property>
	<property name="hibernate.connection.username">root</property>
	<property name="hibernate.connection.password">root</property>

	<!-- 2.hibernate框架的配置 -->
	<property name="hibernate.dialect">
		org.hibernate.dialect.Oracle10gDialect
	</property>
	<!--  ddl[drop create alter] dml[insert update delete] dql[select] dcl -->
	<property name="hibernate.hbm2ddl.auto">create</property>
	<property name="hibernate.show_sql">true</property>
	<property name="hibernate.format_sql">true</property>

	<!-- 3.Mapping文件 -->
	<mapping resource="cn/com/shxt/model/AdminInfo.hbm.xml" />
	<mapping resource="cn/com/shxt/model/RoleInfo.hbm.xml" />
	<mapping resource="cn/com/shxt/model/PowerInfo.hbm.xml" />
	
    </session-factory>

</hibernate-configuration>